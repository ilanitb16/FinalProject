            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Viewbox Grid.Column="8" Grid.ColumnSpan="2" Grid.Row="0">
            <TextBlock x:ConnectionId='17' x:Name="PersonalScore" FontWeight="Bold" FontStyle="Italic" FontFamily="Times New Roman" Text="Your score:"></TextBlock>
        </Viewbox>
        <Viewbox Grid.Row="0" Grid.ColumnSpan="4" Grid.RowSpan="1" Grid.Column="0">
            <TextBlock Foreground="Black" FontFamily="david" FontSize="5px" Height="14" Width="100" >
                <Hyperlink x:ConnectionId='12' FontFamily="david" Foreground="Black"                         >
                    HOME
                </Hyperlink>
                <Hyperlink x:ConnectionId='13' FontFamily="david" Foreground="Black"                             >
                    SETTINGS
                </Hyperlink>                
                <Hyperlink x:ConnectionId='14' FontFamily="david" Foreground="Black"                           >
                    STORE
                </Hyperlink>                
                <Hyperlink x:ConnectionId='15' FontFamily="david" Foreground="Black"                          >
