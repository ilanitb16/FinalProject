<Page x:ConnectionId='1'
    x:Class="FinalProject.Pages.StorePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FinalProject.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"                     
    Background="#68C5FF">


    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="../assets/backgrounds/HelpBg.jpg"/>
            <!--הרקע של הקנבאס-->
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Viewbox Grid.Column="0" Grid.ColumnSpan="1">
            <TextBlock x:ConnectionId='15' x:Name="coinTitle" FontFamily="Edwardian Script ITC" Text="Coins:">
            </TextBlock>
        </Viewbox>

        <Viewbox Grid.Column="1" Grid.ColumnSpan="2">
            <TextBlock FontFamily="Edwardian Script ITC" Text="Digital Store:">
            </TextBlock>
        </Viewbox>

        <Viewbox Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2">
            <Button x:ConnectionId='14' x:Name="BackButton" CornerRadius="100" VerticalAlignment="Stretch" FontFamily="Edwardian Script ITC" HorizontalAlignment="Stretch"
                    Content="Back" FontSize="50"                         >
            </Button>
        </Viewbox>
        <Viewbox  Grid.Row="1" Grid.Column="0">
            <TextBlock Text="Select Avatar:" FontFamily="Edwardian Script ITC"></TextBlock>
        </Viewbox>
        <Viewbox  Grid.Row="2" Grid.Column="0">
            <TextBlock Text="Select Background:" FontFamily="Edwardian Script ITC"></TextBlock>
        </Viewbox>
        <Viewbox Grid.Column="3" Grid.Row="1">
            <Button x:ConnectionId='13' x:Name="CatButton" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                    FontSize="50" Width="100" Height="100" BorderBrush="#21798d"                       BorderThickness="0" >
                <Button.Background>
                    <ImageBrush ImageSource="..//Assets/Characters/Gifs/Cat/IdleCat.gif" Stretch="Fill" />
                </Button.Background>
                <Button.Content>
                    <Image Source="../Assets/Characters/Gifs/Cat/IdleCat.gif"  />
                </Button.Content>
            </Button>
        </Viewbox>
        <Button x:ConnectionId='2' Name="Cat_buy" Grid.Column="3" Grid.Row="1" CornerRadius="100" FontFamily="Edwardian Script ITC" FontSize="50"                       Content="200" HorizontalAlignment="Stretch" Grid.RowSpan="2" Margin="282,0,0,0"/>

        <Viewbox Grid.Column="2" Grid.Row="1">
            <Button x:ConnectionId='12' x:Name="DogButton" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                    FontSize="50" Width="100" Height="100"                       BorderBrush="#21798d" BorderThickness="0" >
                <Button.Background>
                    <ImageBrush ImageSource="..//Assets/Characters/Gifs/Dog/DogIdle.gif" Stretch="Fill" />
                </Button.Background>
                <Button.Content>
                    <Image Source="../Assets/Characters/Gifs/Dog/DogIdle.gif" Height="74" Margin="0,0,0,-1" VerticalAlignment="Bottom" />
                </Button.Content>
            </Button>
        </Viewbox>
        <Button x:ConnectionId='3' Name="dog_buy" Grid.Column="2" Grid.Row="1" CornerRadius="100" FontFamily="Edwardian Script ITC" FontSize="50"                       Content="250" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.RowSpan="2">
        </Button>
        <Viewbox Grid.Column="1" Grid.Row="1">
            <Button x:ConnectionId='11' x:Name="DinoButton" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                    FontSize="50" Width="100" Height="100"                        BorderBrush="#21798d" BorderThickness="0" >
                <Button.Background>
                    <ImageBrush ImageSource="..//assets/Characters/Gifs/Dinosaur/DinoIdle.gif" Stretch="Fill" />
                </Button.Background>
                <Button.Content>
                    <Image Source="/Assets/Characters/Gifs/Dinosaur/DinoIdle.gif" />
                </Button.Content>
            </Button>
        </Viewbox>
        <Button x:ConnectionId='4' Name="dino_buy" Grid.Column="1" Grid.Row="1"  CornerRadius="100" FontFamily="Edwardian Script ITC" FontSize="50"                         Content="use" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.RowSpan="2">
        </Button>

        <Viewbox Grid.Column="3" Grid.Row="2">
            <Button x:ConnectionId='10' x:Name="bg3Button" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                    FontSize="50" Width="100" Height="100"                         BorderBrush="#21798d" BorderThickness="0" >
                <Button.Background>
                    <ImageBrush ImageSource="..//Assets/Backgrounds/bg3.jpg" Stretch="Fill" />
                </Button.Background>
                <Button.Content>
                    <Image Source="../Assets/Backgrounds/bg3.jpg" />
                </Button.Content>
            </Button>
        </Viewbox>
        <Button x:ConnectionId='5' Name="backgound3_buy" Grid.Column="3" Grid.Row="2" CornerRadius="100" FontFamily="Edwardian Script ITC" FontSize="50"                              Content="400" VerticalAlignment="Bottom" HorizontalAlignment="Right" Grid.RowSpan="2" Margin="0,0,0,226">
        </Button>

        <Viewbox Grid.Column="2" Grid.Row="2">
            <Button x:ConnectionId='9' x:Name="bg2Button" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                    FontSize="50" Width="100" Height="100"                         BorderBrush="#21798d" BorderThickness="0" >
                <Button.Background>
                    <ImageBrush ImageSource="..//assets/Backrounds/snowbg.png" Stretch="Fill" />
                </Button.Background>
                <Button.Content>
                    <Image Source="/Assets/Backgrounds/snowbg.png" />
                </Button.Content>
            </Button>
        </Viewbox>
        <Button x:ConnectionId='6' Name="backgound2_buy" Grid.Column="2" Grid.Row="2" FontFamily="Edwardian Script ITC" FontSize="50"                          CornerRadius="100" Content="300" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.RowSpan="2">
        </Button>

        <Viewbox Grid.Column="1" Grid.Row="2">
            <Button x:ConnectionId='8' x:Name="bg1Button" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                    FontSize="50" Width="100" Height="100"                         BorderBrush="#21798d" BorderThickness="0" >
                <Button.Background>
                    <ImageBrush ImageSource="..//assets/Backgrounds/bg2.jpg" Stretch="Fill" />
                </Button.Background>
                <Button.Content>
                    <Image Source="/Assets/Backgrounds/bg2.jpg" />
                </Button.Content>
            </Button>
        </Viewbox>
        <Button x:ConnectionId='7' Name="backgound1_buy" Grid.Column="1" Grid.Row="2" FontFamily="Edwardian Script ITC" FontSize="50"                              CornerRadius="100"  Content="use" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.RowSpan="2">
        </Button>

    </Grid>
</Page>

