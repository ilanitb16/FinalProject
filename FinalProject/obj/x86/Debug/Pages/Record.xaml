            <TextBlock x:ConnectionId='11' Foreground="White" x:Name="title" FontFamily="Times New Roman" Text="Podium:" FontWeight="Bold" FontStyle="Italic">
            </TextBlock>
        </Viewbox>

        <Rectangle RadiusX="50" RadiusY="50" Grid.ColumnSpan="10" Grid.RowSpan="8" Grid.Column="0" Margin="0,205,0,45">
            <Rectangle.Fill>
                <ImageBrush ImageSource="../assets/Backgrounds/Records.png" Stretch="Fill" />
            </Rectangle.Fill>
        </Rectangle>

        <Viewbox Grid.Column="3" Grid.ColumnSpan="4"  Grid.Row="2" Margin="110,29,100,88" Grid.RowSpan="2">
            <TextBlock x:ConnectionId='10' Foreground="white" FontFamily="Times New Roman" x:Name="firstPlace" Text="" FontWeight="Bold" FontStyle="Italic"></TextBlock>
        </Viewbox>
        
        <Viewbox Grid.Column="1" Grid.ColumnSpan="2"  Grid.Row="3">
            <TextBlock x:ConnectionId='9' x:Name="secondPlace" FontSize="10px" FontWeight="Bold" FontStyle="Italic" FontFamily="Times New Roman" Text=""></TextBlock>
        </Viewbox>

        <Viewbox Grid.Column="6" Grid.ColumnSpan="4"  Grid.Row="3" RenderTransformOrigin="0.5,0.5" Margin="70,33,80,91" Grid.RowSpan="2" UseLayoutRounding="False" d:LayoutRounding="Auto">
            <Viewbox.RenderTransform>
                <CompositeTransform Rotation="0.184"/>
            </Viewbox.RenderTransform>
            <TextBlock x:ConnectionId='8' Foreground="white" FontSize="10px" FontFamily="Times New Roman" FontWeight="Bold" FontStyle="Italic" x:Name="thirdPlace" Text=""></TextBlock>
        </Viewbox>

        <Viewbox Grid.Column="4" Grid.Row="5" >
            <TextBlock x:ConnectionId='7' FontWeight="Bold" FontStyle="Italic" x:Name="Score1" Text="Score: "></TextBlock>
        </Viewbox>

        <Viewbox Grid.Column="4" Grid.Row="6">
            <TextBlock x:ConnectionId='6' FontWeight="Bold" FontStyle="Italic" x:Name="Coins1" Text="Coins: "></TextBlock>
        </Viewbox>

        <Viewbox Grid.Column="1" Grid.Row="5">
            <TextBlock x:ConnectionId='5' FontWeight="Bold" FontStyle="Italic" x:Name="Score2" Text="Score: "></TextBlock>
