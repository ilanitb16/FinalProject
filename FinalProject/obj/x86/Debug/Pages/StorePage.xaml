<Page
    x:Class="FinalProject.Pages.StorePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FinalProject.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#68C5FF">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Viewbox Grid.Column="1" Grid.ColumnSpan="2">
            <TextBlock FontFamily="Edwardian Script ITC" Text="Digital Store:">
                
            </TextBlock>
        </Viewbox>

        <Viewbox Grid.Row="4" Grid.Column="0">
            <Button x:ConnectionId='8' x:Name="BackButton" VerticalAlignment="Stretch" FontFamily="Edwardian Script ITC" HorizontalAlignment="Stretch"
                    Content="Back" FontSize="50"                         >
            </Button>
        </Viewbox>
        <Viewbox  Grid.Row="1" Grid.Column="0">
            <TextBlock Text="Select Avatar:" FontFamily="Edwardian Script ITC"></TextBlock>
        </Viewbox>       
        <Viewbox  Grid.Row="2" Grid.Column="0">
            <TextBlock Text="Select Background:" FontFamily="Edwardian Script ITC"></TextBlock>
        </Viewbox>
        <Viewbox Grid.Column="3" Grid.Row="1">
            <Button x:ConnectionId='7' x:Name="CatButton" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                    FontSize="50" Width="100" Height="100"                         BorderBrush="#21798d" BorderThickness="0" >
                <Button.Background>
                    <ImageBrush ImageSource="..//Assets/Characters/Gifs/Cat/IdleCat.gif" Stretch="Fill" />
                </Button.Background>
                <Button.Content>
                    <Image Source="../Assets/Characters/Gifs/Cat/IdleCat.gif"  />
                </Button.Content>
            </Button>
        </Viewbox>        
        
        <Viewbox Grid.Column="2" Grid.Row="1">
            <Button x:ConnectionId='6' x:Name="DogButton" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                    FontSize="50" Width="100" Height="100"                         BorderBrush="#21798d" BorderThickness="0" >
                <Button.Background>
                    <ImageBrush ImageSource="..//Assets/Characters/Gifs/Dog/DogIdle.gif" Stretch="Fill" />
                </Button.Background>
                <Button.Content>
                    <Image Source="../Assets/Characters/Gifs/Dog/DogIdle.gif" />
                </Button.Content>
            </Button>
        </Viewbox>
        <Viewbox Grid.Column="1" Grid.Row="1">
            <Button x:ConnectionId='5' x:Name="DinoButton" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                    FontSize="50" Width="100" Height="100"                          BorderBrush="#21798d" BorderThickness="0" >
                <Button.Background>
                    <ImageBrush ImageSource="..//assets/Characters/Gifs/Dinosaur/DinoIdle.gif" Stretch="Fill" />
                </Button.Background>
                <Button.Content>
                    <Image Source="/Assets/Characters/Gifs/Dinosaur/DinoIdle.gif" />
                </Button.Content>
            </Button>
        </Viewbox>

        <Viewbox Grid.Column="3" Grid.Row="2">
            <Button x:ConnectionId='4' x:Name="bg3Button" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                    FontSize="50" Width="100" Height="100"                         BorderBrush="#21798d" BorderThickness="0" >
                <Button.Background>
                    <ImageBrush ImageSource="..//Assets/Backgrounds/bg3.jpg" Stretch="Fill" />
                </Button.Background>
                <Button.Content>
                    <Image Source="../Assets/Backgrounds/bg3.jpg" />
                </Button.Content>
            </Button>
        </Viewbox>

        <Viewbox Grid.Column="2" Grid.Row="2">
            <Button x:ConnectionId='3' x:Name="bg2Button" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                    FontSize="50" Width="100" Height="100"                         BorderBrush="#21798d" BorderThickness="0" >
                <Button.Background>
                    <ImageBrush ImageSource="..//assets/Backrounds/snowbg.png" Stretch="Fill" />
                </Button.Background>
                <Button.Content>
                    <Image Source="/Assets/Backgrounds/snowbg.png" />
                </Button.Content>
            </Button>
        </Viewbox>
        <Viewbox Grid.Column="1" Grid.Row="2">
            <Button x:ConnectionId='2' x:Name="bg1Button" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                    FontSize="50" Width="100" Height="100"                         BorderBrush="#21798d" BorderThickness="0" >
                <Button.Background>
                    <ImageBrush ImageSource="..//assets/Backgrounds/bg2.jpg" Stretch="Fill" />
                </Button.Background>
                <Button.Content>
                    <Image Source="/Assets/Backgrounds/bg2.jpg" />
                </Button.Content>
            </Button>
        </Viewbox>
    </Grid>
</Page>

